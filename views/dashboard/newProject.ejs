<!-- views/dashboard/newProject.ejs -->
<% layout("layouts/boilerplate") %>


<form action="/newProject" method="POST">
    <h1>Create a New Project</h1>

    <div class="form-group">
        <label for="title">Project Title:</label>
        <input type="text" name="title" id="title" required>
    </div>

    <div class="form-group">
        <label for="description">Project Description:</label>
        <textarea name="description" id="description" required></textarea>
    </div>

    <div class="form-group">
        <label for="skillsRequired">Skills Required (comma-separated):</label>
        <input type="text" name="skillsRequired" id="skillsRequired" required>
    </div>

    <div class="form-group">
        <label for="rolesRequired">Roles Required (comma-separated):</label>
        <input type="text" name="rolesRequired" id="rolesRequired" required>
    </div>

    <div>
        <button type="submit">Create Project</button>
    </div>
</form>

<style>
    /* Global form styles */
    form {
        max-width: 600px;
        margin: 2rem auto;
        padding: 1.5rem;
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
    }

    h1 {
        text-align: center;
        font-family: 'Proxima Nova', sans-serif;
        color: #333;
        margin-bottom: 1rem;
    }

    /* Form group for alignment */
    .form-group {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    label {
        font-size: 1rem;
        font-weight: 600;
        color: #333;
    }

    /* Form inputs */
    input[type="text"],
    textarea {
        width: 100%;
        padding: 0.8rem;
        font-size: 1rem;
        border: 1px solid #ddd;
        border-radius: 4px;
        margin-bottom: 1rem;
        transition: border-color 0.3s ease;
    }

    input[type="text"]:focus,
    textarea:focus {
        border-color: #4e9bff;
        outline: none;
    }

    textarea {
        resize: vertical;
        min-height: 100px;
    }

    /* Button */
    button[type="submit"] {
        padding: 1rem 2rem;
        background-color: #4e9bff;
        color: white;
        font-size: 1rem;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        width: 100%;
        transition: background-color 0.3s ease;
    }

    button[type="submit"]:hover {
        background-color: #3578d7;
    }

    /* Adding responsive styles */
    @media (max-width: 600px) {
        form {
            padding: 1rem;
        }

        h1 {
            font-size: 1.25rem;
        }

        input[type="text"],
        textarea {
            padding: 0.7rem;
            font-size: 0.9rem;
        }

        button[type="submit"] {
            padding: 0.8rem 1.5rem;
        }
    }

</style>
